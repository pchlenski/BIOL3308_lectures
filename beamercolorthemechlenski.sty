% Color definitions go here
\definecolor{white}{HTML}{FFFFF8}
\definecolor{black}{HTML}{111111}
\definecolor{gray}{HTML}{595959}
\definecolor{red}{HTML}{BE1E2D}
\definecolor{blue}{HTML}{0097A7}
\definecolor{yellow}{HTML}{FFAB40}

% Set colors ----------------------------------
% White backgrounds:
\setbeamercolor*{background canvas}{bg=white}

% Black texts:
\setbeamercolor*{normal text}{fg=black}
\setbeamercolor*{emph}{fg=blue}
\setbeamercolor*{math text}{fg=black}
\setbeamercolor*{titlelike}{fg=black}
\setbeamercolor*{itemize item}{fg=black}

% Other colors:
\setbeamercolor*{itemize subitem}{fg=gray}
\setbeamercolor*{button}{fg=red}
\setbeamercolor*{separation line}{fg=black}
